# EditorConfig - https://editorconfig.org

# 顶级配置文件
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript 文件
[*.{ts,tsx,js,jsx}]
indent_size = 2

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Shell 脚本
[*.sh]
indent_size = 2

# 包管理器锁文件
[{package-lock.json,yarn.lock}]
indent_size = 2
